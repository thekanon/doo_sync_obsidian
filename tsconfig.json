{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Next 13/14+ 에서 권장
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true
  },
"include": [
  "next-env.d.ts",
  "**/*.ts",
  "**/*.tsx",
  "**/*.d.ts",
  ".next/types/**/*.ts"
],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
